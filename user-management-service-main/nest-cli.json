{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main/node/main",
  "compilerOptions": {
    "tsConfigPath": "tsconfig.build.json",
    "deleteOutDir": true,
    "assets": [
      {
        "include": "main/resources/**/*", "watchAssets": true
      }
    ]
  },
  "generateOptions": {
    "spec": false
  },
  "language": "ts"
}
